<div class="container-fluid mb-5 px-0">
  <section class="get-started bg-garageup-primary bg-icon bg-icon-reverse bg-icon--light bg-icon-reverse--light">
    <style>
      /* Scoped: Get Started CTA button using Washology lime + blue text */
      .get-started .btn.btn-primary-dark {
        background-color: var(--brand-yellow) !important; /* lime */
        border-color: var(--brand-yellow) !important;
        color: var(--brand-blue) !important; /* blue text on lime */
      }
      .get-started .btn.btn-primary-dark:hover,
      .get-started .btn.btn-primary-dark:focus {
        background-color: var(--brand-yellow) !important;
        border-color: var(--brand-yellow) !important;
        color: var(--brand-blue) !important;
        box-shadow: 0 6px 16px rgba(184, 226, 21, 0.35); /* soft lime glow */
      }
    </style>
    <div class="estimate-prompt">
      <h2 class="section-title"><%= typeof title !== 'undefined' ? title : 'Ready to get started?' %></h2>
      <p><%= typeof body !== 'undefined' ? body : 'Contact us for a free onsite estimate within 24 hours.' %></p>
      <div class="btn-wrapper ">
        <a href="<%= typeof url !== 'undefined' ? url : '/contact-us' %>" class="btn btn-primary-dark"><%= typeof label !== 'undefined' ? label : 'Contact Us' %></a>
      </div>
    </div>
  </section>
</div>
